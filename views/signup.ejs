<!DOCTYPE html>
<html>

<head>
  <% include ./head %>
  <link rel='stylesheet' href='/stylesheets/signup-form.css'>
</head>

<body>
  <div class="container">
    <% include ./nav %>
    <h4 id="signup-title">Enter the Following:</h4>
    <form id="signup-form">
      <div class="form-group">
        <label for="first-name" class="col-form-label-lg">First name</label>
        <input type="text" class="form-control" placeholder="First name">
      </div>
      <div class="form-group">
        <label for="last-name" class="col-form-label-lg">Last name</label>
        <input type="text" class="form-control" placeholder="Last name">
      </div>
      <div class="form-group">
        <label for="InputEmail1" class="col-form-label-lg">Email address</label>
        <input type="email" class="form-control" id="InputEmail1" aria-describedby="emailHelp" placeholder="Enter email">
      </div>
      <div class="form-group">
        <label for="InputPassword1" class="col-form-label-lg">Password</label>
        <input type="password" class="form-control" id="InputPassword1" placeholder="Password">
      </div>
      <div class="form-group">
        <label for="InputPassword2" class="col-form-label-lg">Confirm Password</label>
        <input type="password" class="form-control" id="InputPassword2" placeholder="Password">
      </div>
      <button type="submit" class="btn btn-primary">Sign Up</button>
    </form>
  </div>
  <!--end of container-->
</body>

</html>
